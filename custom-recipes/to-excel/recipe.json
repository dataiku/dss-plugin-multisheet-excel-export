{
    "meta" : {
        "label" : "Multi-Sheet Excel Export",
        "description" : "Take multiple datasets as input and output a multi-sheet xlsx file",
        "icon" : "icon-file"
    },

    "kind" : "PYTHON",
    "selectableFromDataset": "input_dataset",

    "inputRoles" : [
        {
            "name": "input_dataset",
            "label": "Input datasets to export as sheet",
            "arity": "NARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles" : [
        {
            "name": "folder",
            "label": "Folder containing excel workbook",
            "description": "Folder containing excel workbook with multiple sheets from the input datasets",
            "arity": "UNARY",
            "acceptsDataset": false,
            "acceptsManagedFolder": true,
            "required": true
        }
    ],

    "params": [
        {
            "name": "output_workbook_name",
            "label": "Name of the Excel Workbook",
            "type": "STRING",
            "defaultValue": "output",
            "mandatory": true
        },
        {
            "name": "update_sheets",
            "label": "Update existing Workbook",
            "description": "Retains all sheets in Workbook",
            "type": "BOOLEAN",
            "defaultValue": false,
            "mandatory": false
        },
        {
            "name": "append_data",
            "label": "Append data",
            "description": "Append data instead of overwriting",
            "type": "BOOLEAN",
            "defaultValue": false,
            "mandatory": false,
            "visibilityCondition": "model.update_sheets"
        }

    ],
    "resourceKeys" : []
}
